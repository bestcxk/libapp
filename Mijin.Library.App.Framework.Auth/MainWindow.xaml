<Window
    x:Class="Mijin.Library.App.Framework.Auth.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Mijin.Library.App.Framework.Auth"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="米进授权应用"
    Width="600"
    Height="150"
    FontSize="20"
    mc:Ignorable="d">
    <StackPanel>
        <StackPanel
            Margin="0,20,0,0"
            HorizontalAlignment="center"
            Orientation="Horizontal">

            <TextBlock Text="密钥   ：" />
            <TextBox
                Name="code"
                Width="300"
                Margin="0,0,5,0" />
        </StackPanel>
        <StackPanel
            Margin="0,20,0,0"
            HorizontalAlignment="center"
            Orientation="Horizontal">
            <TextBlock Text="授权码：" />
            <TextBox
                Name="key"
                Width="300"
                Margin="0,0,5,0" />
            <Button
                Width="130"
                Click="GenKey"
                Content="生成授权码" />
        </StackPanel>
    </StackPanel>
</Window>
