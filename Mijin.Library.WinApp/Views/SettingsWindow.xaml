<mah:MetroWindow x:Class="Mijin.Library.App.Views.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:mah="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        xmlns:local="clr-namespace:Mijin.Library.App.Views"
        xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"
        mc:Ignorable="d"
        Title="设置" MinHeight="480" MinWidth="400" MaxHeight="480" MaxWidth="400" Height="480" Width="400" Closing="MetroWindow_Closing">
    <StackPanel >

        <StackPanel Margin="0,5,0,5">
            <StackPanel Margin="0,5,0,5"  Orientation="Horizontal" Height="30">
                <Label HorizontalContentAlignment="Center" Width="100" Content="设备ID："></Label>
                <ComboBox Name="idCom"></ComboBox>
            </StackPanel>
            <StackPanel Margin="0,5,0,5" Orientation="Horizontal" Height="30">
                <Label Content="后台管理URL：" HorizontalContentAlignment="Center" Width="100" ></Label>
                <TextBox 
                    Width="200"
                    Name="LibraryManageUrlText"
                    HorizontalContentAlignment="Stretch"
                    Controls:TextBoxHelper.ClearTextButton="True"
                    Controls:TextBoxHelper.WatermarkAlignment="Right"
                    SpellCheck.IsEnabled="True"
                    />
                <Button Margin="5,0,0,0" ToolTip="根据后台管理页URL自动生成自助页面URL" Content="同步自助URL" Name="syncUrl" Click="syncUrl_Click"></Button>
            </StackPanel>
            <StackPanel Margin="0,5,0,5" Orientation="Horizontal" Height="30">
                <Label Content="自助页面URL：" HorizontalContentAlignment="Center" Width="100" ></Label>
                <TextBox Width="250"  Name="ReaderActionUrlText"></TextBox>
            </StackPanel>
            <StackPanel Margin="0,5,0,5" Orientation="Horizontal" Height="30">
                <Label Content="直达URL：" HorizontalContentAlignment="Center" Width="100" ></Label>
                <TextBox Width="250"  Name="NoSelectOpenUrlText" ToolTip="该输入框存在值时，则直接打开该值地址页"></TextBox>
            </StackPanel>
            <StackPanel Margin="0,5,0,5" Orientation="Horizontal" Height="30" >
                <Label ToolTip="全屏则宽高都填0" Content="窗口宽：" HorizontalContentAlignment="Center" Width="100" ></Label>
                <TextBox Width="75"  Name="WindowWidthText" ></TextBox>
                <Label ToolTip="全屏则宽高都填0" Content="窗口高：" HorizontalContentAlignment="Center" Width="100" ></Label>
                <TextBox Width="75"  Name="WindowHeightText"></TextBox>
            </StackPanel>
            <StackPanel Margin="0,5,0,5" Orientation="Horizontal" Height="30">
                <Label Content="缓存处理：" HorizontalContentAlignment="Center" Width="100" ></Label>
                <ComboBox ToolTip="程序退出时缓存处理" Name="OnExitClearWebCacheCom"></ComboBox>
            </StackPanel>
            <Controls:ToggleSwitch Margin="10,10,10,10" Content="显示窗口标题栏" Name="ShowWindowTitleBarCheck" />
            <Controls:ToggleSwitch Margin="10,0,10,10" Content="调整窗口宽高" Name="CanResizeCheck" />
            <Controls:ToggleSwitch Margin="10,0,10,10" Content="开发者模式" Name="IsDevCheck" />
            <!--<CheckBox Margin="10,10,10,10" Content="显示窗口标题栏" Name="ShowWindowTitleBarCheck"></CheckBox>-->
            <!--<CheckBox Margin="10,0,10,10" Content="手动调整窗口宽高" Name="CanResizeCheck"></CheckBox>
            <CheckBox Margin="10,0,10,10" Content="开发者模式" Name="IsDevCheck"></CheckBox>-->
        </StackPanel>
            <StackPanel>
                <WrapPanel HorizontalAlignment="Stretch" VerticalAlignment="Stretch">

                    <Button Width="60"  Content="重置" Name="reLoadBtn"  Click="reLoadBtn_Click" FontSize="14" Style="{DynamicResource MahApps.Styles.Button.Square.Accent}" Margin="10,0,0,0"/>

                    <Button Width="60" Content="保存" Name="saveBtn"  Click="saveBtn_Click" FontSize="14" FontStyle="Normal" FontWeight="Bold" Style="{DynamicResource MahApps.Styles.Button.Square.Accent}" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="256,0,0,0"/>
                </WrapPanel>
                <ProgressBar
                    Margin="0,5,0,0"
                    Width="380"
                    IsIndeterminate="true"
                    Height="5"
                    Name="saveLoading"
                    Maximum="100"
                    Visibility="Hidden"
                    Minimum="0"/>
            </StackPanel>
    </StackPanel>
</mah:MetroWindow>
